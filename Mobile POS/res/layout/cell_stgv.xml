<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    	
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ecf4fa"
        >
        
 <FrameLayout
        android:id="@+id/flMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

 <com.example.redfootpos.object.STGVImageView
        android:id="@+id/img_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1"
        android:scaleType="centerCrop"/>

 </FrameLayout>

     
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flMenu"
        android:gravity="center_horizontal"
        android:text="name" />
    
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="SRP PHP 100"
        android:textSize="13sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tv_price_disc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="DISC PHP 100"
        android:textColor="#090"
        android:textSize="13sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price_disc"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:weightSum="100" >

        <Button
            android:id="@+id/btnItemSave"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="48"
            android:background="@drawable/button_item_hover"
            android:text="Save"
            android:textSize="10sp" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#fff" />

        <Button
            android:id="@+id/btnBuyItem"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="48"
            android:background="@drawable/button_item_hover"
            android:text="Buy"
            android:textSize="10sp" />

    </LinearLayout>

</RelativeLayout>
